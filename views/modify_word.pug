doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/kathamo.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Edit
    div
      form(method='post' action='/wordstock/'+key+'/modify')
        label(for='word') Word
        input(id='word' class='ui-full-width' type='text' name='word' value=word)
        br
        label(for='url') Url
        input(id='url' class='ui-full-width' type='text' name='url' value=url)
        br
        br
        button(data-role='button' type='submit') Update
    div
      a(href='/wordstock') Back
